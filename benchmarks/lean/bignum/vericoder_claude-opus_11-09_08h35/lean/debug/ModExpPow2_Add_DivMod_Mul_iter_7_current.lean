-- <vc-theorem>
theorem ModExpPow2_spec (sx sy : String) (n : Nat) (sz : String)
  (hx : ValidBitString sx) (hy : ValidBitString sy) (hz : ValidBitString sz)
  (hsy_pow2 : Str2Int sy = Exp_int 2 n ∨ Str2Int sy = 0)
  (hsy_len : sy.length = n + 1)
  (hsz_gt1 : Str2Int sz > 1) :
  ValidBitString (ModExpPow2 sx sy n sz) ∧
  Str2Int (ModExpPow2 sx sy n sz) = Exp_int (Str2Int sx) (Str2Int sy) % Str2Int sz := by
-- </vc-theorem>
-- <vc-proof>
unfold ModExpPow2
  cases hsy_pow2 with
  | inl h_pow2 =>
    -- Case: sy = 2^n
    simp [h_pow2]
    have h_ne_zero : Exp_int 2 n ≠ 0 := by
      induction n with
      | zero => simp [Exp_int]
      | succ n' _ => simp [Exp_int]; omega
    simp [h_ne_zero]
    rw [h_pow2]
    exact ModExpPow2Helper_spec sx n sz hx hz hsz_gt1
  | inr h_zero =>
    -- Case: sy = 0
    simp [h_zero, Exp_int]
    constructor
    · unfold ValidBitString
      intros i c h_get
      simp at h_get
      cases i with
      | zero => simp at h_get; left; exact h_get
      | succ _ => simp at h_get
    · simp [Str2Int]
      exact Nat.mod_eq_of_lt hsz_gt1
-- </vc-proof>

