  intro i c h
  cases i with
  | zero =>
    -- get? 0 for "1" is some '1', so c = '1'
    simp [String.get?] at h
    injection h with hc
    subst hc
    right
    rfl
  | succ _ =>
    simp [String.get?] at h
    contradiction
