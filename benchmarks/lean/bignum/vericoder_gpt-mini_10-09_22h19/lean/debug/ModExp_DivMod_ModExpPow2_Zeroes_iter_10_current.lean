-- Convert a Nat to its binary string representation (MSB first).
def nat_to_bin : Nat → String
| 0     => "0"
| n + 1 =>
  let q := (n + 1) / 2
  let s := nat_to_bin q
  let last := if (n + 1) % 2 = 1 then "1" else "0"
  s ++ last
-- </vc-helpers>

